<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/list_item_entry_image"
        android:layout_width="@dimen/image_dimension_compact"
        android:layout_height="@dimen/image_dimension_compact"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/ArticleImageDesc"
        android:scaleType="centerCrop"
        android:src="@android:color/transparent"
        android:visibility="gone" >
    </ImageView>

    <TextView
        android:id="@+id/list_item_entry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/list_item_entry_image"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorSecondary" />

    <TextView
        android:id="@+id/list_item_entry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/list_item_entry_date"
        android:layout_toRightOf="@id/list_item_entry_image"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="3"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/list_item_entry_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_entry_title"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="5"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorSecondary" />

</RelativeLayout>