<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingBottom="6dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="6dip" >

    <TextView
        android:id="@+id/list_item_entry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="?listViewMetaTextSize" />

    <TextView
        android:id="@+id/list_item_entry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/list_item_entry_date"
        android:layout_below="@id/list_item_entry_date"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="?listViewTitleMaxLines"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="?listViewTitleTextSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_item_entry_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/list_item_entry_title"
        android:layout_below="@id/list_item_entry_title"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3"
        android:minLines="2"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/list_item_entry_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_entry_date"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/divider"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="?listViewMetaTextSize" />

    <TextView
        android:id="@+id/list_item_entry_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_entry_divider"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="?listViewMetaTextSize" />

</RelativeLayout>