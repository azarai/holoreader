<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="6dp" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/list_item_entry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/listViewMetaTextSize" />

        <TextView
            android:id="@+id/list_item_entry_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/list_item_entry_date"
            android:layout_below="@id/list_item_entry_date"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="@integer/listViewTitleMaxLines"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/listViewTitleTextSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_entry_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/list_item_entry_title"
            android:layout_below="@id/list_item_entry_title"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:minLines="2"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/list_item_entry_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_item_entry_date"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/divider"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/listViewMetaTextSize" />

        <TextView
            android:id="@+id/list_item_entry_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_item_entry_divider"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/listViewMetaTextSize" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/list_item_entry_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="@string/image_article"
        android:scaleType="centerCrop"
        android:visibility="gone" >
    </ImageView>

</LinearLayout>