<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/listitem_white"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="6dp" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/list_item_entry_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="?listViewTitleMaxLines"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="?listViewTitleTextSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_entry_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/list_item_entry_title"
            android:layout_below="@id/list_item_entry_title"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:minLines="2"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/list_item_entry_image"
        android:layout_marginLeft="20dp"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_article"
        android:visibility="gone" >
    </ImageView>

</LinearLayout>